<Page x:Class="StudentActiviti.View.Pages.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentActiviti.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="975"
      Title="Report">

    <Grid Background="White">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="150" />
                <RowDefinition Height="40" />
                <RowDefinition Height="300" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1"
                  Margin="50 0 50 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Выберите начало периода"
                           FontSize="20"
                           TextDecorations="Underline" 
                           FontWeight="Bold"/>
                <DatePicker Grid.Column="2"
                         Name="StartPeriodDp"/>
                <TextBlock Text="Выберите конец периода"
                           FontSize="20"
                           TextDecorations="Underline" 
                           FontWeight="Bold"
                           Grid.Column="4"/>
                <DatePicker Grid.Column="6"
                         Name="EndPeriodDp"/>
            </Grid>

            <Grid Grid.Row="3"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Column="1"
                         Name="WhatTb"/>
            </Grid>

            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="590" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1"
                        Height="50"
                        Width="250"
                        Content="Сформировать отчёт"
                        Name="GenerateBtn"
                        FontSize="20"
                        FontWeight="Bold"
                        Click="GenerateBtn_Click"/>
            </Grid>


        </Grid>

    </Grid>
</Page>
