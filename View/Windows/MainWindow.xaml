<Window x:Class="StudentActiviti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentActiviti"
        mc:Ignorable="d"
        Title="Учёт активности" Height="800" Width="1300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="1"
                      Margin="0 50 0 0">
            <StackPanel>
                <Image Source="/Resources/IMG_1003.JPG"/>
                <Image Source="/Resources/IMG_20190124_182913.jpg" Margin="0 100 0 0" />
                <Image Source="/Resources/IMG_5299.JPG" Margin="0 100 0 0"  />
                <Image Source="/Resources/IMG_8699.JPG" Margin="0 100 0 0"  />
                <Image Source="/Resources/Статья 1,2.JPG" Margin="0 100 0 0" />

            </StackPanel>
        </ScrollViewer>
        


        <Frame Name="MainFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"/>

        <Grid Margin="30 100 30 300">

            <Grid.RowDefinitions >
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="20" />
                <RowDefinition Height="1*" />
                
                
            </Grid.RowDefinitions>
            <Button 
                    Name="AddGroupBtn"
                    Content="Добавить группу"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Click="AddGroupBtn_Click"/>

            <Button Grid.Row="2"
                    Name="AddActivityBtn"
                    Content="Добавить активность"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Click="AddActivityBtn_Click"/>

            <Button Grid.Row="4"
                    Name="AccountingBtn"
                    Content="Учёт"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Click="AccountingBtn_Click"/>

            <Button Grid.Row="6"
                    Name="ReportBtn"
                    Content="Отчёт 1"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Click="ReportBtn_Click"/>

            <Button Grid.Row="8"
                    Name="Report2Btn"
                    Content="Отчёт 2"
                    FontSize="20"
                    FontWeight="DemiBold"
                    Click="Report2Btn_Click"/>

            

        </Grid>

    </Grid>
</Window>
